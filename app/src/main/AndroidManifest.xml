<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.explore.lapometer" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ParticipantDetailsActivity"
            android:label="@string/title_activity_participant_category"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.TopParticipantsActivity"
            android:label="@string/title_activity_top_participants"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name=".activities.ParticipantCountActivity"
            android:label="@string/title_activity_participant_count" >
        </activity>
        <activity
            android:name=".activities.CategorySelectionActivity"
            android:label="@string/title_activity_category_selection" >
        </activity>
    </application>

</manifest>
